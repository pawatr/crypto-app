<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CryptoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:ignore="ObsoleteSdkInt" tools:targetApi="l">
            ?attr/colorPrimaryVariant
        </item>
    </style>

    <style name="CryptoAppNoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:ignore="ObsoleteSdkInt" tools:targetApi="l">
            ?attr/colorPrimaryVariant
        </item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
    </style>

    <style name="TextSubtitle1" parent="Theme.CryptoApp">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSubtitle2" parent="Theme.CryptoApp">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextCaption" parent="Theme.CryptoApp">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Headline6" parent="Theme.CryptoApp">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>